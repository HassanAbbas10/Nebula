{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",

  "assist": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "lineWidth": 120
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "error",
        "useConst": "warn",
        "noImplicitBoolean": "warn"
      },
      "correctness": {
        "noUnreachable": "error"
      }
    }
  }
}
